{% endif %}
smallfiles = {{ mongodb_conf_smallfiles|to_nice_json|bool|lower }}
{% if mongodb_conf_replSet %}
# Replica set options:
replSet = {{ mongodb_conf_replSet }}
replIndexPrefetch = {{ mongodb_conf_replIndexPrefetch }}
{% endif %}
