# {{ ansible_managed }}

auth = {{ mongodb_conf_auth|to_nice_json|bool|lower }}
bind_ip = {{ mongodb_conf_bind_ip }}
cpu = {{ mongodb_conf_cpu|to_nice_json|bool|lower }}
dbpath = {{ mongodb_conf_dbpath }}
fork = {{ mongodb_conf_fork|to_nice_json|bool|lower }}
httpinterface = {{ mongodb_conf_httpinterface|to_nice_json|bool|lower }}
ipv6 = {{ mongodb_conf_ipv6|to_nice_json|bool|lower }}
journal = {{ mongodb_conf_journal|to_nice_json|bool|lower }}
logappend = {{ mongodb_conf_logappend|to_nice_json|bool|lower }}
logpath = {{ mongodb_conf_logpath }}
maxConns = {{ mongodb_conf_maxConns|int }}
noprealloc = {{ mongodb_conf_noprealloc|to_nice_json|bool|lower }}
noscripting = {{ mongodb_conf_noscripting|to_nice_json|bool|lower }}
notablescan = {{ mongodb_conf_notablescan|to_nice_json|bool|lower }}
port = {{ mongodb_conf_port|int }}
quota = {{ mongodb_conf_quota|to_nice_json|bool|lower }}
